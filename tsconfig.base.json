{
  "compilerOptions": {
    "allowUnreachableCode": false,
    "allowUnusedLabels": false,
    "composite": true,
    "declaration": true,
    "declarationMap": true,
    "forceConsistentCasingInFileNames": true,
    "incremental": true,
    "inlineSources": true,
    "isolatedModules": true,
    "module": "node16",
    "moduleResolution": "node16",
    "esModuleInterop": false,
    "newLine": "LF",
    "noEmitOnError": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitOverride": true,
    "noImplicitReturns": true,
    "noUnusedLocals": true,
    "pretty": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "strictNullChecks": true,
    "target": "es2022",
    "useUnknownInCatchVariables": false,
    "lib": [
      "es2022",
      "dom",
      "dom.iterable"
    ]
  },
  "ts-node": {
    /* use experimentalResolver to enable mapping .js â†’ .ts for Node16/NodeNext module resolution */
    "experimentalResolver": true
  },
  "exclude": [
    "node_modules"
  ]
}
